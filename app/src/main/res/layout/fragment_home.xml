            android:id="@+id/btar"
            android:layout_width="200dp"
            android:layout_height="320dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:elevation="8dp"
            app:cardCornerRadius="10dp">

